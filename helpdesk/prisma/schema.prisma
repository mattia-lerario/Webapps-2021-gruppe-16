// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model issue {
  id          Int       @id @default(autoincrement())
  title       String
  creator     String
  description String
  department  String
  severity    String
  isResolved  Boolean
  createdAt   DateTime
  comments    comment[]
}

model comment {
  id          Int      @id @default(autoincrement())
  description String
  issueId     Int?
}
