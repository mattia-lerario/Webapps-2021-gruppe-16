// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Issue {
  id          Int       @id @default(autoincrement())
  title       String
  creator     String
  description String
  department  String
  severity    String
  isResolved  Boolean
  createdAt   DateTime
  comments    Comment[]
}

model Comment {
  id          Int      @id @default(autoincrement())
  description String
  issueId     Int
  issue       Issue   @relation(fields: [issueId], references: [id])
}
