//create component for calendar cards single day

import react from 'react'

var CalendarCard = React.createClass({
  render: function () {
    return (
      <div className="card">
        <div className="card-content">
          <span className="card-title">{this.props.day}</span>
          <p>{this.props.event}</p>
        </div>
      </div>
    )
  },
})

//create component for calendar cards multiple days
var CalendarCardMultipleDays = React.createClass({
  render: function () {
    return (
      <div className="card">
        <div className="card-content">
          <span className="card-title">{this.props.day}</span>
          <p>{this.props.event}</p>
        </div>
      </div>
    )
  },
})

//create component for calendar cards with no event
var CalendarCardNoEvent = React.createClass({
  render: function () {
    return (
      <div className="card">
        <div className="card-content">
          <span className="card-title">{this.props.day}</span>
          <p>No event</p>
        </div>
      </div>
    )
  },
})

//create component for calendar cards with no event
var CalendarCardMultipleDaysNoEvent = React.createClass({
  render: function () {
    return (
      <div className="card">
        <div className="card-content">
          <span className="card-title">{this.props.day}</span>
          <p>No event</p>
        </div>
      </div>
    )
  },
})
